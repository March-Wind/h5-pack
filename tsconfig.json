{
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS",
            "importHelpers": true
          }
    },
    "compilerOptions": {
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true,
        "target": "esnext",
        "module": "commonjs"
    },
    "exclude": [
        "node_modules/**/*"
    ]
}